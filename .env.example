# klub - Environment Configuration
# Copy this file to .env.local and update with your values

# ====================
# SUPABASE CONFIGURATION (FREE TIER)
# ====================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ====================
# NEXT.JS CONFIGURATION
# ====================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Klub
NEXT_PUBLIC_APP_ENV=development

# ====================
# STRIPE CONFIGURATION (Phase 2 - When Monetization Starts)
# ====================
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ====================
# EMAIL CONFIGURATION (Using Resend - 100 emails/day free)
# ====================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxx
EMAIL_FROM=noreply@klub.app

# ====================
# ANALYTICS (Optional - Free Tiers)
# ====================
# PostHog (1M events/month free): https://posthog.com
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Vercel Analytics (included with Vercel hosting)
# NEXT_PUBLIC_ANALYTICS_ID=xxx

# ====================
# ERROR TRACKING (Optional - Free Tier)
# ====================
# Sentry (5K errors/month free): https://sentry.io
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ====================
# FEATURE FLAGS
# ====================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# ====================
# MOBILE APP CONFIGURATION (Phase 2)
# ====================
# EXPO_PUBLIC_API_URL=https://klub.app
# EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
# EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ====================
# DEVELOPMENT ONLY
# ====================
# Supabase Local Development (optional)
# NEXT_PUBLIC_SUPABASE_LOCAL_URL=http://localhost:54321
# SUPABASE_LOCAL_ANON_KEY=your_local_anon_key
# SUPABASE_LOCAL_SERVICE_ROLE_KEY=your_local_service_role_key