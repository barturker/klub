# Environment Configuration for klub
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=klubadmin
DB_PASSWORD=klubpass123
DB_NAME=klub_db
DATABASE_URL=postgresql://klubadmin:klubpass123@localhost:5432/klub_db

# Redis Configuration (Phase 2)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# API Configuration  
API_URL=http://localhost:3000
GRAPHQL_PATH=/graphql

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# Auth0 Configuration (optional)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.klub.com

# AWS Cognito (alternative to Auth0)
COGNITO_USER_POOL_ID=us-east-1_xxxxx
COGNITO_CLIENT_ID=xxxxx
COGNITO_REGION=us-east-1

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_API_VERSION=2023-10-16

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=klub-assets
S3_REGION=us-east-1
CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.xxx
FROM_EMAIL=noreply@klub.com
FROM_NAME=klub

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Frontend URLs
WEB_URL=http://localhost:3001
MOBILE_DEEP_LINK_SCHEME=klub

# Monitoring
SENTRY_DSN=https://xxx@sentry.io/xxx
DATADOG_API_KEY=xxx
NEW_RELIC_LICENSE_KEY=xxx

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# PgAdmin (for docker-compose)
PGADMIN_EMAIL=admin@klub.com
PGADMIN_PASSWORD=admin